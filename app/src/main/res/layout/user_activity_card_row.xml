<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="5dp">

    <!-- Main Relative Layout-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:padding="4dp">

        <!-- TextView for the Date-->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Date"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:textStyle="bold" />

        <!-- TextView for displaying Max Heart Rate value-->
        <TextView
            android:id="@+id/tvSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDate"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:text="Steps "
            android:textColor="@color/text_pink"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvStepsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDate"
            android:layout_toRightOf="@+id/tvSteps"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:text="maxValue"
            android:textColor="@color/text_gray"
            android:textSize="16sp" />


        <!-- TextView for displaying Min Heart Rate Value-->
        <TextView
            android:id="@+id/tvCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSteps"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:text="Calories "
            android:textColor="@color/text_pink"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCaloriesValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvStepsValue"
            android:layout_toRightOf="@+id/tvCalories"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:text="minValue"
            android:textColor="@color/text_gray"
            android:textSize="16sp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>